<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/activity_cart"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:paddingBottom="@dimen/cart_content_bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.zollet.abhilash.retailstore.UI.CartActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/emptyImage"
            android:src="@drawable/empty_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/emptyText"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_centerHorizontal="true"
            android:text="Your Cart is Empty!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emptyImage"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/totalPriceCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/productTotalPriceHeading"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:text="Total Price"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginStart="@dimen/normal_margin"
                android:textStyle="normal|bold"/>
            <TextView
                android:id="@+id/productTotalPrice"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rs. 7000"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginRight="@dimen/normal_margin"
                android:textStyle="normal|bold"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cart_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalPriceCard"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:scrollbarStyle="outsideOverlay"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/totalPriceDetailCard"
            android:layout_below="@+id/cart_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">
                <TextView
                    android:id="@+id/productActualTotalPriceHeading"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:text="Actual Total price"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/productActualTotalPrice"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rs. 7000"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/productTotalDiscountHeading"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:text="Discount"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginStart="@dimen/normal_margin"/>
                <TextView
                    android:id="@+id/productTotalDiscount"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="- Rs. 2000"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"/>
                <TextView
                    android:id="@+id/productPaybaleAmountHeading"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:text="Payble Amount"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/productPaybaleAmount"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rs. 5000"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold"/>
            </GridLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    </ScrollView>